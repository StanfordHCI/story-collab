    <li class="<%= 'active' if current_page?(users_edit_profile_path) %>"><%= link_to "Profile Settings", users_edit_profile_path %></li>
    <li class="<%= 'active' if current_page?(users_preferences_path) %>"><%= link_to "Email Notifications", users_preferences_path %></li>
