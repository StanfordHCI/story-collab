<% buttons = true if local_assigns[:buttons].nil? %>
<div class="scene-form span4">
  <i class="scene-close icon-remove"></i>
  <%= form_for scene, :remote => true, :html => { :class => "scene-form-inner span12" } do |f| %>
    <div class="scene-header">
      <span class="scene-header-text"><%= t 'scenes.new.form.header' %></span>
    </div>
    <%= f.text_field :title, :placeholder => t('scenes.new.form.title'), :class => 'span12' %><br />
    <%= f.text_area :content, :rows => 3, 
                    :placeholder => t('scenes.new.form.description'), 
                    :class => 'span12' %><br />
    <%= f.text_area :prompt, :rows => 3,
                    :placeholder => t('scenes.new.form.prompt'),
                    :class => 'span12' %><br />
                    
    <span class="text-error">
    </span>
    <% if buttons %>
    <%= link_to t('application.actions.cancel'), "#", :class => 'btn btn-mini cancel-scene' %>
    <%= f.submit t('application.actions.save'), :class => 'btn btn-mini' %>
    <% end %>
  <% end %>
</div>
