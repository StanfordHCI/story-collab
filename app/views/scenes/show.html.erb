<div class="scene">
  <div class="navbar navbar-inverse navbar-magic">
    <div class="navbar-inner">
      <ul class="nav">
        <li>
          <%= link_to story_path(@scene.story) do %>
            <i class="icon-angle-left"></i> Back to the story
          <% end %>
        </li>
      </ul>
    </div>
  </div>

  <div class="scene-info">
  <h1><%= @scene.title %></h1>
    <p class="scene-content">
      <%= @scene.content %>
    </p>
    <p class="scene-prompt">
      <%= @scene.prompt %>
    </p>
  </div>

  <div class="row-fluid">
    <div class="paragraph span8">
      <div class="paragraphs-container span12">
        <%= render :partial => "paragraphs/paragraph",
          :collection => @paragraphs,
          :locals => { 
            :scene => @scene, :show_title => true } %>
      </div>
    </div>
    <div class="paragraphs-nav span4">
      <div class="header">
        <h1 class="pull-left"><%= @scene.paragraphs.count %> Drafts</h1>
        <%= form_tag(scene_sort_drafts_path(@scene), :method => :get, :remote => true, :class => "pull-right") do %> 
          <%= label_tag(:sort_drafts, "Sort by") %>
          <%= select_tag :sort_drafts, options_for_select(@sort_urls) %>
        <% end %>
      </div>
      <%= render :partial => "scenes/paragraph_nav",
        :locals => { :scene => @scene, :paragraphs => @paragraphs } %>
    </div>
  </div>
</div>
