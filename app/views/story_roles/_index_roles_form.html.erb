<% if can?(:create, @story.story_roles.new) %>
  <%= form_for [@story, @story_role], :remote => true, :html => { :class => "form-inline" } do |f| %>
    <input id="user_name" type="text" autocomplete="off" placeholder= "Type a username..." />
    <input id="story_role_id" name="story_role[user_id]" type="hidden" value="-1" />
    <select id="story_role_role" name="story_role[role]">
      <option value>Pick a role</option>
      <option value="contributor">Contributor</option>
      <option value="moderator">Moderator</option>
    </select>
    <%= f.submit 'Add', :class => 'btn btn-primary', :disabled => true %>
  <% end %>
<% end %>
