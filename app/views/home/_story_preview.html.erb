<% cache [story, 'index-preview'] do %>
  <%= link_to story, :class => "story-preview" do %>
    <h1><%= story.title %> 
      <small class="author">
        Started by <%= story.user.name %>
      </small>
    </h1>
    <div class="last-updated">
      Started on <%= story.created_at.strftime("%B %d, %I:%M %p") %>
    </div>
  <% end %>
<% end %>
