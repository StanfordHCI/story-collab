<% cache [story, 'index-preview'] do %>
  <%= link_to story, :class => "story-preview" do %>
    <h1><%= story.title %> 
      <small class="author">
        <%= t 'home.recent.author', author: story.user.name %>
      </small>
    </h1>
    <div class="last-updated">
      <%= t 'home.recent.time_html', time: timeago(story.created_at) %>
    </div>
  <% end %>
<% end %>
