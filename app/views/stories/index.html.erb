<h1>All stories</h1>
<%= link_to content_tag(:i, "", :class => 'icon-plus-sign') + ' New Story', new_story_path, :class => "btn new-story" %>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Subtitle</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stories.each do |story| %>
  <tr>
    <td><%= story.title %></td>
    <td><%= story.subtitle %></td>
    <td><%= story.user.name %></td>
    <td><%= link_to 'Show', story %></td>
    <td><%= link_to 'Edit', edit_story_path(story) %></td>
    <td><%= link_to 'History', history_story_path(story) %></td>
    <td><%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
