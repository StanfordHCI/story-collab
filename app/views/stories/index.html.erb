<%= link_to content_tag(:i, "", :class => 'icon-plus-sign') + ' New Story', new_story_path, :class => "btn new-story pull-right" %>

<div class="clearfix"></div>

<div class="story-index row-fluid">
  <div class="search span3">
    <form>
      <input type="text">
      <input type="submit">
    </form>
  </div>
  <div class="stories-list span9">
    <h1>All Stories</h1>

    <table class="table">
      <% @stories.each do |story| %>
        <tr class="my-story">
          <td>
            <h3><%= link_to story.title, story %></h3>
            <%= story.subtitle %>
          </td>
          <td>Started by <%= link_to story.user.name, story.user %></td>
        </tr>
    <% end %>
    </table>
  </div>
</div>
