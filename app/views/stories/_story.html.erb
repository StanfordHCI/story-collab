<% 
  # Local variables used by this partial
  preview ||= false
%>

<div class="story"> 
  <h1>
    <%= @story.title %>
  </h1>

  <p class="subtitle">
    <%= @story.subtitle %>
  </p>

  <div class="meta">
    <div class="author">
      Started by <%= link_to @story.user.name, "#" %>
      <% if !preview %>
        <span class="timestamp">
          <%= time_ago_in_words(@story.created_at) %> ago
        </span>
      <% end %>
    </div>
  </div>

  <div class="editing">
    <% if !preview %>
      <%= link_to edit_story_path(@story), :class => "btn" do %>
      <i class="icon-edit"></i> Edit Story
      <% end %>
      <!--<%= link_to content_tag(:i, "", :class => "icon-plus-sign") + " New Question", "#", :class => "btn" %>-->
    <% end %>
  </div>

  <div class="content">
    <% @story.parse_story.each do |para| %>
    <div class="paragraph row-fluid">
      <div class="span7">
        <%= Format.markdown(para[:para].content) %>
      </div>
      <div class="span1">
        <span id="scene_<%= para[:scene].id %>_like_count"><%= para[:scene].likes.size %></span> <i class="icon-heart"></i>
      </div>
      <div class="span4">
        <%= Format.markdown(para[:scene].content) %>
        <% puts current_user.inspect %>
        <% if current_user.voted_up_on? para[:scene] %>
          <%= link_to like_scene_path(para[:scene]), :id => "scene_" + para[:scene].id.to_s + "_like_button", :disabled => "disabled", :class => "btn btn-mini", :remote => true do %>
          <i class="icon-heart"></i> Loved
          <% end %>
        <% else %>
          <%= link_to like_scene_path(para[:scene]), :id => "scene_" + para[:scene].id.to_s + "_like_button", :class => "btn btn-mini", :remote => true do %>
          <i class="icon-heart"></i> Love
          <% end %>
        <% end %>
        <a class="btn btn-mini"><i class="icon-comment"></i> Comment</a>
      </div>
    </div>
    <% end %>
  </div>
</div>


