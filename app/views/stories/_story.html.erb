<% 
  # Local variables used by this partial
  preview ||= false
%>

<div class="story"> 
  <div class="story-header">
    <h1>
      <%= @story.title %>
    </h1>

    <p class="subtitle">
      <%= @story.subtitle %>
    </p>

    <div class="meta">
      <div class="author">
        Started by <%= link_to @story.user.name, "#" %>
        <% if !preview %>
          <span class="timestamp">
            <%= time_ago_in_words(@story.created_at) %> ago
          </span>
        <% end %>
      </div>
    </div>

    <div class="editing">
      <%= link_to edit_story_path(@story), :class => "btn" do %>
        <i class="icon-edit"></i> Edit Story
      <% end %>
    </div>
  </div>

  <div class="content">
    <%= render :partial => 'scenes/scene', :collection => @story.scenes %>
  </div>
</div>
