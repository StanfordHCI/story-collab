<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.text_field :name, :placeholder => 'Name', :autofocus => true %></div>

  <div><%= f.email_field :email, :placeholder => 'Email' %></div>

  <div>
    <%= text_field_tag "vis_birthday", nil, :placeholder => "Birthday" %>
    <%= f.hidden_field :birthday %> 
  </div>

  <div><%= f.password_field :password, :placeholder => 'Password' %></div>

  <div><%= f.password_field :password_confirmation, :placeholder => 'Retype Password' %></div>

  <div><%= f.submit "Sign up", :class => 'btn' %></div>
<% end %>

<%= render "devise/shared/links" %>
