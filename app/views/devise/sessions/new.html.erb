<div class="row-fluid">

  <div class="span6">
    <h2><%= t 'users.login.title' %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.email_field :email, :placeholder => t('users.login.email'), :autofocus => true %></div>

  <div><%= f.password_field :password, :placeholder => t('users.login.password') %></div>

  <% if devise_mapping.rememberable? -%>
  
    <div><label class="checkbox"><%= f.check_box :remember_me %> <%= t('users.login.remember_me') %></label></div>
  <!--<%= f.label :remember_me %>-->
  <% end -%>

  <div><%= f.submit t('users.login.title'), :class => 'btn btn-primary' %></div>
<% end %>

</div>

<div class="span6">
  <h2><%= t('users.login.with_facebook') %></h2>
<%= link_to t('users.links.provider', provider: "Facebook"), user_omniauth_authorize_path(:facebook), :class => 'btn btn-primary' %>
  </div>

</div>

<%= render "devise/shared/links" %>
