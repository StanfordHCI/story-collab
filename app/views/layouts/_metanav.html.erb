<div class="metanav">
  <ul>
    <% if user_signed_in? %>
      <li><%= link_to current_user.name, current_user%> (<%= current_user.email %>)</li>
      <li><%= link_to "Preferences", users_edit_profile_path %>
      <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
    <% else %>
      <li><%= link_to "Sign in", new_user_session_path %></li>
      <li><%= link_to "Sign up", new_user_registration_path %></li>
    <% end %>
    <li class="buglink">
      <i class="icon-bullhorn"></i>
      <a href="http://ensemble.boards.net/index.cgi?board=bugreports">Found a bug?</a>
    </li>
  </ul>
</div>


